    <TextView
        android:id="@+id/recoveryAccountTextView"
        android:layout_width="211dp"
        android:layout_height="29dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="176dp"
        android:fontFamily="@font/knewave"
        android:text="@string/forget_password"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tNotienes" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signInAppCompatButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ic_buttom"
        android:fontFamily="@font/knewave"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:text="@string/loginn"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tContrase単a" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/google"
        android:layout_width="86dp"
        android:layout_height="60dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/ic_buttomr"
        android:drawableLeft="@drawable/g1"
        android:fontFamily="@font/knewave"


        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tContrase単a" />

    <TextView
        android:id="@+id/tNotienes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_weight="0"
        android:fontFamily="@font/knewave"
        android:text="@string/text_signup"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="0"
        android:fontFamily="@font/knewave"
        android:text="@string/link_signup"
        android:textColor="#00D9FF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tNotienes" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/about"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/splash"
        android:drawableLeft="@drawable/baseline_question_mark_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

