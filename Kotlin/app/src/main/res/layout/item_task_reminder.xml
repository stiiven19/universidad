<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/purple_700"
    app:cardCornerRadius="16dp"
    android:layout_marginVertical="4dp">

    <LinearLayout
        android:id="@+id/rowCancion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:paddingVertical="8dp">
        <!--
        <CheckBox
            android:id="@+id/cbReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        -->
        <TextView
            android:id="@+id/tvReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text=""/>



        <!--
        <Button
            android:id="@+id/btprevious"
            android:text="s"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_skip_previous_24"/>
        -->
        <Button
            android:id="@+id/btplayitem"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/baseline_play_arrow_24"/>
        <TextView
            android:id="@+id/nombreCancionItem"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:text="sssssss"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            style="@style/MarqueeText"

            />
        <Button
            android:id="@+id/btDelete"
            android:text="s"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/baseline_delete_24"/>
        <!--
        <Button
            android:id="@+id/btnext"
            android:text="s"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_skip_next_24"/>
        -->
    </LinearLayout>

</androidx.cardview.widget.CardView>